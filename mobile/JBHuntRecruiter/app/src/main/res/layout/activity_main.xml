<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:scaleType="centerInside"
            android:background="@color/yellow"
            android:src="@drawable/logo" />

        <com.gc.materialdesign.views.ButtonRectangle android:text="Driver"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/button1"
            materialdesign:animate = "false"
            materialdesign:rippleSpeed="75"
            android:layout_marginTop="85dp"
            android:layout_centerHorizontal="true">
        </com.gc.materialdesign.views.ButtonRectangle >
        <com.gc.materialdesign.views.ButtonRectangle android:text="Office"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/button2"
            materialdesign:rippleSpeed="75"
            android:layout_below = "@+id/button1"
            materialdesign:animate = "false"
            android:layout_centerHorizontal="true">

        </com.gc.materialdesign.views.ButtonRectangle>
        <com.gc.materialdesign.views.ButtonRectangle android:text="Maintance"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/button3"
            materialdesign:rippleSpeed="75"
        android:layout_centerVertical="true"
        materialdesign:animate = "false"
            android:layout_below = "@+id/button2"
        android:layout_centerHorizontal="true">

    </com.gc.materialdesign.views.ButtonRectangle>
        <com.gc.materialdesign.views.ButtonRectangle android:text="Login"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/button4"
            materialdesign:rippleSpeed="75"
            android:layout_centerVertical="true"
            materialdesign:animate = "false"

            android:layout_below = "@+id/button3"
            android:layout_centerHorizontal="true">

        </com.gc.materialdesign.views.ButtonRectangle>
        <com.gc.materialdesign.views.ButtonRectangle android:text="Create account"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/button5"
            android:layout_below = "@+id/button4"
            materialdesign:animate = "false"
            materialdesign:rippleSpeed="75"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </com.gc.materialdesign.views.ButtonRectangle>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
